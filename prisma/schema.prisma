generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String    @id @unique
  username     String    @unique
  email        String    @unique
  auth_session Session[]
  key          Key[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  role         String    @default("USER")
}

model Session {
  id        String   @id @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}

model Key {
  id      String   @id @unique
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  hashedPassword String?
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  description String
  website     String?
  email       String?
  phone       String?
  address     String?
  focusAreas  String   // Stored as JSON string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  approved    Boolean  @default(false)
  createdById String?
} 